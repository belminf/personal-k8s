---
secrets:
  # Generate htpasswd entries by:
  # $ docker run --entrypoint htpasswd registry:2 -Bbn myusername mypassword
  htpasswd: |
    myusername:hashhashhashhashhashhash
  haSharedSecret: "MY_SHARED_SECRET"
ingress:
  enabled: true
  annotations:
    certmanager.k8s.io/issuer: letsencrypt-default
    kubernetes.io/ingress.class: nginx
  hosts:
    - registry.example.com
  tls:
    - secretName: registry-secret
      hosts:
        - registry.example.com
persistence:
  enabled: true
  size: 3Gi
  existingClaim: registry-pvclaim
